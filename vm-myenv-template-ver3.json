{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "virtualMachineNamePrefix": {
            "type": "string",
            "defaultValue": "less than 9 char",
            "metadata": {
                "description": "マシン名の制限より9文字以下の小文字を入力。マシン名の制限に引っかかるとデプロイエラー."
            },
            "maxLength": 9
        },
        "virtualMachineSize": {
            "type": "string",
            "defaultValue": "Standard_B2s"
        },
        "adminUsername": {
            "type": "string"
        },
        "osDiskType": {
            "type": "string",
            "defaultValue": "StandardSSD_LRS",
            "allowedValues": [
                "StandardSSD_LRS",
                "Standard_LRS"
            ]
        },
        "windowsVMs": {
            "type": "array",
            "metadata": {
                "description": "List of VM. eg: [{\"'Name\": \"hoge\", \"PrivateIP\": \"10.0.0.1\"}]"
            },
            "defaultValue": [
                "{\"PrivateIP\":\"10.0.1.13\",\"Name\":\"aadc\",\"imageReference\":{\"publisher\":\"MicrosoftWindowsServer\",\"offer\":\"WindowsServer\",\"sku\":\"2022-datacenter-g2\",\"version\":\"latest\"}}",
                "{\"PrivateIP\":\"10.0.1.7\",\"Name\":\"adcs\"}",
                "{\"PrivateIP\":\"10.0.1.14\",\"Name\":\"adfs\"}",
                "{\"PrivateIP\":\"10.0.1.19\",\"Name\":\"adfs2019\"}",
                "{\"PrivateIP\":\"10.0.1.4\",\"Name\":\"client02\"}",
                "{\"PrivateIP\":\"10.0.1.10\",\"Name\":\"dc\"}",
                "{\"PrivateIP\":\"10.0.1.6\",\"Name\":\"w10-c01\",\"imageReference\":{\"offer\":\"Windows-10\",\"publisher\":\"MicrosoftWindowsDesktop\",\"sku\":\"win10-22h2-pron-g2\",\"version\":\"19045.4170.240307\"}}",
                "{\"PrivateIP\":\"10.0.1.15\",\"Name\":\"wap\"}",
                "{\"PrivateIP\":\"10.0.1.16\",\"Name\":\"web\"}"
            ]
        },
        "adminPassword": {
            "type": "secureString"
        },
        "addressPrefixes": {
            "type": "array",
            "defaultValue": [ "10.0.0.0/16" ],
            "metadata": {
                "description": "VNet のアドレス空間"
            }
        },
        "defaultSubnet": {
            "type": "string",
            "defaultValue": "10.0.0.1/24",
            "metadata": {
                "description": "VNet のデフォルトサブネットのアドレス空間"
            }
        },
        "dnsServers": {
            "type": "array",
            "defaultValue": [
                "10.0.1.10",
                "1.1.1.1"
            ],
            "metadata": {
                "description": "DNS サーバーのアドレス。AD DC サーバーの IP を指定する。"
            }
        },
        "dnsPrefix": {
            "type": "string",
            "defaultValue": "yourAlias",
            "metadata": {
                "description": "パブリック IP アドレスの DNS 名。dnsPrefix-virtualMachineNamePrefix-dc. みたいな"
            }
        }
    },
    "variables": {
        "networkSecurityGroupName": "[concat(resourceGroup().name,'-nsg')]",
        "nsgId": "[resourceId(resourceGroup().name, 'Microsoft.Network/networkSecurityGroups', variables('networkSecurityGroupName'))]",
        "virtualNetworkName": "[concat(resourceGroup().name,'-vnet')]",
        "vnetId": "[resourceId('Microsoft.Network/virtualNetworks', variables('virtualNetworkName'))]",
        "subnetRef": "[concat(variables('vnetId'), '/subnets/', 'default')]",
        "publicIpAddressSku": "Basic",
        "diagnosticsStorageAccountName": "[concat(parameters('virtualMachineNamePrefix'),'diag', uniqueString(resourceGroup().id))]",
        "defaultImageReference": {
            "publisher": "MicrosoftWindowsServer",
            "offer": "WindowsServer",
            "sku": "2022-datacenter-g2",
            "version": "latest"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2023-11-01",
            "name": "[concat(parameters('virtualMachineNamePrefix'), '-', parameters('windowsVMs')[copyIndex()].Name, '-pubip')]",
            "location": "[resourceGroup().location]",
            "copy": {
                "name": "publicIPCopy",
                "count": "[length(parameters('windowsVMs'))]"
            },
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "[concat(parameters('dnsprefix'),'-',parameters('windowsVMs')[copyIndex()].Name)]"
                }
            },
            "sku": {
                "name": "[variables('publicIpAddressSku')]"
            }
        },
        {
            "name": "[concat(parameters('virtualMachineNamePrefix'), '-', parameters('windowsVMs')[copyIndex()].Name, '-nic')]",
            "copy": {
                "name": "nicscopy",
                "count": "[length(parameters('windowsVMs'))]"
            },
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2023-11-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Network/publicIPAddresses/', parameters('virtualMachineNamePrefix'), '-', parameters('windowsVMs')[copyIndex()].Name, '-pubip')]",
                "[concat('Microsoft.Storage/storageAccounts/', variables('diagnosticsStorageAccountName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                            "privateIPAllocationMethod": "Static",
                            "privateIPAddress": "[parameters('windowsVMs')[copyIndex()].PrivateIP]",
                            "publicIpAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', concat(parameters('virtualMachineNamePrefix'), '-', parameters('windowsVMs')[copyIndex()].Name, '-pubip'))]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "name": "[variables('networkSecurityGroupName')]",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2023-11-01",
            "location": "[resourceGroup().location]"
        },
        {
            "name": "[variables('virtualNetworkName')]",
            "type": "Microsoft.Network/virtualNetworks",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityGroups', variables('networkSecurityGroupName'))]"
            ],
            "apiVersion": "2023-11-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": "[parameters('addressPrefixes')]"
                },
                "dhcpOptions": {
                    "dnsServers": "[parameters('dnsServers')]"
                },
                "subnets": [
                    {
                        "name": "default",
                        "properties": {
                            "addressPrefix": "[parameters('defaultSubnet')]",
                            "networkSecurityGroup": {
                                "id": "[variables('nsgId')]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "name": "[variables('diagnosticsStorageAccountName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2023-01-01",
            "location": "[resourceGroup().location]",
            "properties": {},
            "kind": "Storage",
            "sku": {
                "name": "Standard_LRS"
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2023-09-01",
            "name": "[concat(parameters('virtualMachineNamePrefix'), '-', parameters('windowsVMs')[copyIndex()].Name)]",
            "location": "[resourceGroup().location]",
            "copy": {
                "name": "vmsCopy",
                "count": "[length(parameters('windowsVMs'))]"
            },
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', parameters('virtualMachineNamePrefix'), '-', parameters('windowsVMs')[copyIndex()].Name, '-nic')]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('virtualMachineSize')]"
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('virtualMachineNamePrefix'), '-', parameters('windowsVMs')[copyIndex()].Name, '-nic'))]"
                        }
                    ]
                },
                "storageProfile": {
                    "osDisk": {
                        "createOption": "fromImage",
                        "managedDisk": {
                            "storageAccountType": "[parameters('osDiskType')]"
                        }
                    },
                    "imageReference": "[if(equals(indexOf('imageReference', string(parameters('windowsVMs')[copyIndex()])), -1), variables('defaultImageReference'), parameters('windowsVMs')[copyIndex()].imageReference)]"
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true,
                        "storageUri": "[concat('https://', variables('diagnosticsStorageAccountName'), '.blob.core.windows.net/')]"
                    }
                },
                "osProfile": {
                    "computerName": "[concat(parameters('virtualMachineNamePrefix'), '-', parameters('windowsVMs')[copyIndex()].Name)]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "windowsConfiguration": {
                        "enableAutomaticUpdates": true,
                        "provisionVmAgent": true
                    }
                }
            }
        }
    ],
    "outputs": {
        "adminUsername": {
            "type": "string",
            "value": "[parameters('adminUsername')]"
        }
    }
}